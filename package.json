{
  "name": "remon",
  "dependencies": {
    "electron-serve": "^2.1.1",
    "systeminformation": "^5.25.11"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && node build.mjs",
    "watch": "nodemon",
    "start:ui:dev": "cd ui && npm run dev",
    "electron:dev": "concurrently -k -s first \"npm run start:ui:dev\" \"npm run watch\"",
    "electron:build": "cd ui && npm run build && cd .. && electron-builder"
  },
  "main": "build/main.js",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cpx": "^1.5.0",
    "electron": "^37.1.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.25.5",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.2"
  },
  "author": {
    "name": "Hazmed Moreno",
    "email": "mail@hazmedmoreno.com"
  },
  "license": "MIT",
  "version": "0.0.2",
  "description": "Simple System Monitor",
  "publisher": "Hazmed Moreno",
  "build": {
    "icon": "./build/icon.png",
    "appId": "com.hazmedmoreno.remon",
    "productName": "ReMon",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/public",
        "to": "public"
      }
    ],
    "linux": {
      "target": [
        "snap"
      ],
      "icon": "build"
    },
    "snap": {
      "confinement": "classic",
      "grade": "stable",
      "summary": "This simple ui resource monitor has been built on Electron and is meant to be cross-plattform. It relies on system-information API and tracks:\n- CPU load (%)\n- CPU temp\n- RAM used/total\n- Storage used/total\n- Network upload (Mbps)\n- Network download (Mbps)"
    }
  }
}